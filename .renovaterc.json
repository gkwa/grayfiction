{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "*"
      ],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "fast-forward",
      "requiredStatusChecks": null
    },
    {
      "matchDepTypes": [
        "configMigration"
      ],
      "automerge": true,
      "automergeType": "branch",
      "automergeStrategy": "fast-forward",
      "requiredStatusChecks": null,
      "stabilityDays": 0
    }
  ],
  "platformAutomerge": true
}
